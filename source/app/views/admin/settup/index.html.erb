<form class="form-horizontal">
  <% magicka_form('gnc.data') do |form| %>
    <%= render partial: 'admin_form' %>

    <%= render partial: 'settings_form', locals: { form: form } %>

    <div class="form-group row">
      <div class="offset-2 col-10">
        <%= form.only(:form) do
          form.button(
            ng_click: 'gnc.save()',
            ng_disabled: 'gnc.ongoing',
            classes: 'btn-primary',
            text: 'Save'
          )
        end %>
        <%= form.only(:display) do
          angular_safe_link_to(
            :edit_client, { id: "{{gnc.data.id}}" },
            class: 'btn btn-primary'
          ) do
            'Edit'
          end
        end %>
      </div>
    </div>
  <% end %>
</form>
